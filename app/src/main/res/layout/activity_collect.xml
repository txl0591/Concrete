<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="48.0dip">
        <TextView android:text="@string/app_name" android:layout_centerInParent="true" style="@style/style_text_title_bar" />
        <ImageButton
            android:id="@+id/Upload_Button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/menu_upload"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View style="@style/style_divider" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/BigTextView"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:gravity="center_horizontal|center"
            android:textSize="50dp"/>

        <ListView
            android:id="@+id/ColletList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ListView>
    </LinearLayout>
</LinearLayout>
